            "sources": [
                {
                    "type": "git",
                    "url": "https://source.puri.sm/Librem5/libhandy",
                    "tag": "v0.0.13"
                }
            ]
        },
        {
            "name": "foliate",
            "buildsystem": "meson",
            "sources": [
                {
                    "type": "git",
                    "url": "https://github.com/johnfactotum/foliate.git",
                    "tag": "2.2.1",
                    "commit": "24a0a02706cafba22fac038e28a068306cb917c5"
                }
            ]
        }
    ]
